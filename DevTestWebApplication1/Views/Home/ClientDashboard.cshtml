
@{
    ViewData["Title"] = "ClientDashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Client Dashboard</h1>

<div class="row">
    <div class="col-1">
    </div>
    <div class="col-10">
        <table id="userBillsTable" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Bill date
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Paid date
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <div class="col-1"></div>
</div>

<div class="modal fade" id="paymentModal" tabindex="-1" role="dialog" aria-labelledby="staticModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bill payment</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input type="hidden" id="billId" />
                    <span>Bill date: </span>
                    <span id="billDate"></span>
                </div>
                <div class="form-group">
                    <span>Bill amount: $</span>
                    <span id="billAmount"></span>
                </div>
                <div class="form-group">
                    <label class="form-control-label">Credit card</label>
                    <input type="text" id="creditCardInput" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-control-label">Card holder</label>
                    <input type="text" id="cardholderNameInput" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-control-label">Card holder</label>
                    <input type="month" id="expirationMonthInput" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" data-dismiss="modal" >Cancel</button>
                <button class="btn btn-primary" id="payBillConfirm">Pay Bill</button>
            </div>
        </div>
    </div>
</div>

